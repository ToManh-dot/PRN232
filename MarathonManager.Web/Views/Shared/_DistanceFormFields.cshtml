@model MarathonManager.Web.Interfaces.IDistanceFormModel

<div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

<div class="mb-3">
    <label asp-for="Name" class="form-label fw-bold"></label>
    <input asp-for="Name" class="form-control" placeholder="Ví dụ: Half Marathon, 10K Fun Run" />
    <span asp-validation-for="Name" class="text-danger small"></span>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="DistanceInKm" class="form-label fw-bold"></label>
        <div class="input-group">
            <input asp-for="DistanceInKm" type="number" step="0.1" min="0.1" class="form-control" placeholder="Ví dụ: 21.1" />
            <span class="input-group-text">km</span>
        </div>
        <span asp-validation-for="DistanceInKm" class="text-danger small"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="RegistrationFee" class="form-label fw-bold"></label>
        <div class="input-group">
            <input asp-for="RegistrationFee" type="number" step="1000" min="0" class="form-control" placeholder="Ví dụ: 500000" />
            <span class="input-group-text">VNĐ</span>
        </div>
        <span asp-validation-for="RegistrationFee" class="text-danger small"></span>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mb-3">
        <label asp-for="MaxParticipants" class="form-label fw-bold"></label>
        <input asp-for="MaxParticipants" type="number" min="1" class="form-control" placeholder="Ví dụ: 1000" />
        <span asp-validation-for="MaxParticipants" class="text-danger small"></span>
    </div>
    <div class="col-md-6 mb-3">
        <label asp-for="StartTime" class="form-label fw-bold"></label>
        <input asp-for="StartTime" type="datetime-local" asp-format="{0:yyyy-MM-ddTHH:mm}" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger small"></span>
    </div>
</div>
