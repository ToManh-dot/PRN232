@model MarathonManager.Web.ViewModels.AdminDashboardViewModel
@using X.PagedList

@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var racesTabActive = (ViewBag.CurrentTab == "races" || string.IsNullOrEmpty(ViewBag.CurrentTab)) ? "active" : "";
    var usersTabActive = ViewBag.CurrentTab == "users" ? "active" : "";
    var blogsTabActive = ViewBag.CurrentTab == "blogs" ? "active" : "";
}

<div class="container" style="padding-top: 80px; padding-bottom: 80px;">
    <h1 class="display-4 fw-bold mb-4">
        <i class="fas fa-user-shield me-2"></i> Admin Dashboard
    </h1>

    @* ==== ALERTS ==== *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    @* ==== NAV TABS ==== *@
    <ul class="nav nav-tabs nav-fill mb-3" id="adminTab" role="tablist">
        <li class="nav-item">
            <button class="nav-link @racesTabActive" id="races-tab" data-bs-toggle="tab" data-bs-target="#tab-races" type="button">
                <i class="fas fa-flag-checkered me-1"></i> Giải Chạy
                <span class="badge bg-danger ms-1">@Model.AllRaces?.TotalItemCount</span>
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @usersTabActive" id="users-tab" data-bs-toggle="tab" data-bs-target="#tab-users" type="button">
                <i class="fas fa-users-cog me-1"></i> Người Dùng
                <span class="badge bg-info ms-1">@Model.AllUsers?.TotalItemCount</span>
            </button>
        </li>
        <li class="nav-item">
            <button class="nav-link @blogsTabActive" id="blogs-tab" data-bs-toggle="tab" data-bs-target="#tab-blogs" type="button">
                <i class="fas fa-newspaper me-1"></i> Blog
                <span class="badge bg-secondary ms-1">@Model.AllBlogPosts?.TotalItemCount</span>
            </button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabContent">

        @* ===================== TAB RACES ===================== *@
        <div class="tab-pane fade show @racesTabActive" id="tab-races" role="tabpanel">
            <h4 class="mt-4">Tất cả Giải chạy</h4>

            @if (!Model.AllRaces?.Any() ?? true)
            {
                <div class="alert alert-info mt-4">Không có giải chạy nào.</div>
            }
            else
            {
                <table class="table table-hover align-middle mt-4">
                    <thead class="table-light">
                        <tr><th>STT</th><th>Tên</th><th>Tổ chức</th><th>Địa điểm</th><th>Trạng thái</th><th class="text-end">Hành động</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.AllRaces.Count; i++)
                        {
                            var race = Model.AllRaces[i];
                            var stt = (Model.AllRaces.PageNumber - 1) * Model.AllRaces.PageSize + (i + 1);
                            var rowClass = race.Status switch
                            {
                                "Pending" => "table-warning",
                                "Cancelled" => "table-danger opacity-75",
                                _ => ""
                            };

                            <tr class="@rowClass">
                                <td>@stt</td>
                                <td>@race.Name</td>
                                <td>@race.OrganizerName</td>
                                <td>@race.Location</td>
                                <td>
                                    @if (race.Status == "Approved")
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else if (race.Status == "Pending")
                                    {
                                        <span class="badge bg-warning text-dark">Chờ duyệt</span>
                                    }
                                    else if (race.Status == "Cancelled")
                                    {
                                        <span class="badge bg-danger">Đã hủy</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@race.Status</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-controller="Admin" asp-action="RaceDetails" asp-route-id="@race.Id" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    @if (race.Status == "Pending")
                                    {
                                        <form asp-controller="Admin" asp-action="Approve" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="raceId" value="@race.Id" />
                                            <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-check"></i></button>
                                        </form>
                                        <form asp-controller="Admin" asp-action="Cancel" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="raceId" value="@race.Id" />
                                            <button type="submit" class="btn btn-danger btn-sm"><i class="fas fa-times"></i></button>
                                        </form>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <pager class="pagination"
                       list="@Model.AllRaces"
                       asp-controller="Admin"
                       asp-action="Index"
                       asp-route-tab="races"
                       li-Element-Classes="page-item"
                       a-Element-Classes="page-link" />
            }
        </div>

        @* ===================== TAB USERS ===================== *@
        <div class="tab-pane fade show @usersTabActive" id="tab-users" role="tabpanel">
            <h4 class="mt-4">Tất cả Người dùng</h4>

            @if (!Model.AllUsers?.Any() ?? true)
            {
                <div class="alert alert-info mt-4">Không tìm thấy người dùng nào.</div>
            }
            else
            {
                <table class="table table-hover align-middle mt-4">
                    <thead class="table-light">
                        <tr><th>STT</th><th>Họ Tên</th><th>Email</th><th>Vai trò</th><th>Trạng thái</th><th class="text-end">Hành động</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.AllUsers.Count; i++)
                        {
                            var user = Model.AllUsers[i];
                            var stt = (Model.AllUsers.PageNumber - 1) * Model.AllUsers.PageSize + (i + 1);
                            <tr>
                                <td>@stt</td>
                                <td>@user.FullName</td>
                                <td>@user.Email</td>
                                <td>
                                    @if (user.Roles?.Any() ?? false)
                                    {
                                        foreach (var r in user.Roles)
                                        {
                                            <span class="badge bg-secondary me-1">@r</span>
                                        }
                                    }
                                    else
                                    {
                                        <span class="text-muted">N/A</span>
                                    }
                                </td>
                                <td>
                                    @if (user.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Locked</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <form asp-controller="Admin" asp-action="ToggleUserLock" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="userId" value="@user.Id" />
                                        @if (user.IsActive)
                                        {
                                            <button type="submit" class="btn btn-warning btn-sm"><i class="fas fa-lock"></i></button>
                                        }
                                        else
                                        {
                                            <button type="submit" class="btn btn-info btn-sm"><i class="fas fa-lock-open"></i></button>
                                        }
                                    </form>
                                    <a asp-controller="Admin" asp-action="UserDetails" asp-route-userId="@user.Id" class="btn btn-primary btn-sm">
                                        <i class="fas fa-user-edit"></i> Chi tiết
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <pager class="pagination"
                       list="@Model.AllUsers"
                       asp-controller="Admin"
                       asp-action="Index"
                       asp-route-tab="users"
                       li-Element-Classes="page-item"
                       a-Element-Classes="page-link" />
            }
        </div>

        @* ===================== TAB BLOGS ===================== *@
        <div class="tab-pane fade show @blogsTabActive" id="tab-blogs" role="tabpanel">
            <h4 class="mt-4">Tất cả Bài viết Blog</h4>

            @if (!Model.AllBlogPosts?.Any() ?? true)
            {
                <div class="alert alert-info mt-4">Chưa có bài viết nào.</div>
            }
            else
            {
                <table class="table table-hover align-middle mt-4">
                    <thead class="table-light">
                        <tr><th>STT</th><th>Tiêu đề</th><th>Tác giả</th><th>Trạng thái</th><th class="text-end">Hành động</th></tr>
                    </thead>
                    <tbody>
                        @for (int i = 0; i < Model.AllBlogPosts.Count; i++)
                        {
                            var blog = Model.AllBlogPosts[i];
                            var stt = (Model.AllBlogPosts.PageNumber - 1) * Model.AllBlogPosts.PageSize + (i + 1);
                            <tr>
                                <td>@stt</td>
                                <td>@blog.Title</td>
                                <td>@blog.AuthorName</td>
                                <td>
                                    @if (blog.Status == "Published")
                                    {
                                        <span class="badge bg-success">Đã duyệt</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Chờ duyệt</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <form asp-controller="Admin" asp-action="ToggleBlogPostPublish" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="blogId" value="@blog.Id" />
                                        @if (blog.Status == "Published")
                                        {
                                            <button class="btn btn-secondary btn-sm"><i class="fas fa-eye-slash"></i></button>
                                        }
                                        else
                                        {
                                            <button class="btn btn-success btn-sm"><i class="fas fa-check"></i></button>
                                        }
                                    </form>

                                    <form asp-controller="Admin" asp-action="DeleteBlogPost" method="post" class="d-inline" onsubmit="return confirm('Xóa bài viết này?');">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="blogId" value="@blog.Id" />
                                        <button class="btn btn-danger btn-sm"><i class="fas fa-trash"></i></button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <pager class="pagination"
                       list="@Model.AllBlogPosts"
                       asp-controller="Admin"
                       asp-action="Index"
                       asp-route-tab="blogs"
                       li-Element-Classes="page-item"
                       a-Element-Classes="page-link" />
            }
        </div>
    </div>
</div>
