@model MarathonManager.Web.DTOs.RegistrationPreviewDto

@{
    ViewData["Title"] = "Xác nhận đăng ký";
}

<div class="container my-5">
    <h2 class="fw-bold">Xác nhận đăng ký tham gia giải chạy</h2>
    <hr />

    <div class="card shadow-sm">
        <div class="card-body">

            <h4 class="text-primary">@Model.RaceName</h4>
            <p><i class="fas fa-map-marker-alt"></i> @Model.Location</p>
            <p><i class="fas fa-calendar-alt"></i> @Model.RaceDate.ToString("dd/MM/yyyy")</p>
            <hr />

            <h5 class="fw-bold">Thông tin người tham gia</h5>
            <p><strong>Họ tên:</strong> @Model.UserFullName</p>
            <p><strong>Email:</strong> @Model.UserEmail</p>

            <h5 class="fw-bold mt-4">Thông tin cự ly</h5>
            <p><strong>Cự ly:</strong> @Model.DistanceKm km (@Model.DistanceName)</p>
            <p><strong>Giờ xuất phát:</strong> @Model.StartTime.ToString("HH:mm dd/MM/yyyy")</p>
            <p class="fs-4 fw-bold text-success">Phí đăng ký: @Model.Fee.ToString("N0") VNĐ</p>

            <form asp-controller="Registrations" asp-action="Register" method="post" class="mt-4">
                <input type="hidden" name="RaceId" value="@Model.RaceId" />
                <input type="hidden" name="RaceDistanceId" value="@Model.RaceDistanceId" />
                <input type="hidden" name="ReturnUrl" value="@Url.Action("PaymentReturn", "Payments", null, Context.Request.Scheme)" />


                <button type="submit" class="btn btn-danger btn-lg w-100">
                    <i class="fas fa-credit-card me-2"></i> Xác nhận & Thanh toán
                </button>
            </form>

        </div>
    </div>
</div>
